    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context="ken.visa1.Registration">
        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#faa519"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e8e8e7"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:weightSum="1">

                <TextView
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="E-VISA APPLICATION"
                    android:textColor="#2582C5"
                    android:layout_marginLeft="25dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:id="@+id/textView9"
                    android:textAlignment="center"
                    android:layout_weight="0.30" />

            </LinearLayout>

            <EditText
                android:id="@+id/Passport"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.18"
                android:background="#f3f3f3"
                android:hint="Enter Passport Number"
                android:paddingLeft="5dp"
                android:textAlignment="center"

                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="0.18"
                    android:text="Face (ICAO)"
                    android:textAlignment="center"
                    android:textColor="#2582C5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passport"
                    android:textColor="#2582C5"
                    android:layout_marginLeft="25dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="0.55"
                    android:id="@+id/textView11"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="0.09"
                android:layout_height="120dp">

                <ImageView
                    android:layout_width="152dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/face"
                    android:id="@+id/imageFace"
                    android:onClick="imageClick"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/page1"
                    android:id="@+id/imagePass"
                    android:onClick="imageClick2"
                    />

            </LinearLayout>


            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:background="@drawable/greybackground"
                >

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Info"
                    android:textColor="#2582C5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal|center_vertical"/>

                <EditText
                    android:id="@+id/Name"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="name"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="30dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="114dp"
                        android:layout_height="36dp"
                        android:text="Visa Type:"
                        android:textColor="#2582C5"
                        android:layout_marginLeft="25dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="bottom"
                        android:id="@+id/textView3" />

                    <Spinner
                        android:id="@+id/spinnerType"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:entries="@array/Document_arrays"
                        android:layout_marginTop="15dp"
                        tools:prompt="@string/document_prompt"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="114dp"
                        android:layout_height="wrap_content"
                        android:text="Citizen:"
                        android:textColor="#2582C5"
                        android:layout_marginLeft="25dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:id="@+id/textView4"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="186dp"
                        android:layout_height="40dp"
                        android:entries="@array/nation_arrays"
                        android:prompt="@string/nation_prompt"
                        android:layout_marginTop="15dp"
                        android:layout_weight="2.98" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gender:"
                        android:textColor="#2582C5"
                        android:layout_marginLeft="25dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:id="@+id/textView5"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:entries="@array/gender_arrays"
                        android:prompt="@string/gender_prompt"
                        android:layout_weight="1" />
                </LinearLayout>

                <EditText
                    android:id="@+id/DOB"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="@string/set_date"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"
                   />
                <EditText
                    android:id="@+id/Address"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="Address"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"/>
                <EditText
                    android:id="@+id/Address2"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="Address2"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"/>
                <EditText
                    android:id="@+id/Address3"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="Address3"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"/>
                <EditText
                    android:id="@+id/Postcode"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="Postcode"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/City"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="City"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Country:"
                        android:textColor="#2582C5"
                        android:layout_marginLeft="25dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:id="@+id/textView7"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/spinner3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:entries="@array/country_arrays"
                        android:prompt="@string/nation_prompt"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <EditText
                    android:id="@+id/Mail"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="Mail"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:id="@+id/PhoneNum"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="Phone Number"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:inputType="phone"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:background="@drawable/greybackground"
                android:layout_weight="0.18">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Travel Info"
                    android:textColor="#2582C5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal|center_vertical" />

                <EditText
                    android:id="@+id/EntryDate"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Entry Date"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"

                    />

                <EditText
                    android:id="@+id/ExitDate"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="Exit Date"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"

                    />


            </LinearLayout>

            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button android:layout_width="190dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="submit"
                    android:textColor="#fff"
                    android:background="@drawable/btn"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/btnSubmit"
                    android:onClick="buttonOnClick" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>